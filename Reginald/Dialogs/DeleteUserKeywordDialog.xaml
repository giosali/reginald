<ui:ContentDialog x:Class="Reginald.Dialogs.DeleteUserKeywordDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:local="clr-namespace:Reginald.Dialogs"
                  mc:Ignorable="d" 
                  d:DesignHeight="450" d:DesignWidth="800"
                  x:Name="deleteUserKeywordDialog"
             
                  xmlns:ui="http://schemas.modernwpf.com/2019"
                  
                  PrimaryButtonText="Cancel"
                  SecondaryButtonText="Accept">
    <ui:ContentDialog.TitleTemplate>
        <DataTemplate>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Confirmation required"/>
            </StackPanel>
        </DataTemplate>
    </ui:ContentDialog.TitleTemplate>
    
    <ui:SimpleStackPanel>
        <TextBlock Text="{Binding ElementName=deleteUserKeywordDialog, Path=UserKeywordName}"
                   TextWrapping="Wrap"/>
    </ui:SimpleStackPanel>
</ui:ContentDialog>
